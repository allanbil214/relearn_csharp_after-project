<Window x:Class="ButtonRunner.BetterMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonRunner"
        mc:Ignorable="d"
        Title="BetterMainWindow" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight">
    <Grid x:Name="MainGrid" Width="800" Height="434.04">
        <Label x:Name="debugLabel"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="10,10,0,0"
               FontSize="12"
               Foreground="Red"
               Background="White"
               Padding="5"/>
        <Button x:Name="chaseButton"
                Content="Catch Me!"
                Width="60" Height="20"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                MouseEnter="chaseButton_MouseEnter"/>
    </Grid>
</Window>
